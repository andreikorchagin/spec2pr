{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Spec",
  "description": "A parsed specification from a GitHub issue (structured or natural language)",
  "type": "object",
  "required": ["id", "title", "overview"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Issue identifier (owner/repo#number)"
    },
    "title": {
      "type": "string",
      "description": "Short spec title from issue"
    },
    "overview": {
      "type": "string",
      "description": "High-level description from issue body"
    },
    "acceptance": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Testable acceptance criteria (may be empty for natural language specs)",
      "default": []
    },
    "constraints": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Explicit non-goals and constraints",
      "default": []
    },
    "interfaces": {
      "type": "array",
      "items": {"type": "string"},
      "description": "External interfaces or dependencies",
      "default": []
    },
    "format": {
      "type": "string",
      "enum": ["structured", "natural_language"],
      "description": "Whether the spec was parsed from structured markdown or natural language"
    },
    "raw_content": {
      "type": "string",
      "description": "Original issue content (only for natural language specs)"
    }
  }
}
