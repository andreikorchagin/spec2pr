{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CodeReview",
  "description": "Code review input and output structure",
  "type": "object",
  "required": ["task", "diff", "feedback"],
  "properties": {
    "task": {
      "type": "object",
      "description": "Task specification being reviewed",
      "required": ["id", "title", "goal"],
      "properties": {
        "id": {"type": "string"},
        "title": {"type": "string"},
        "goal": {"type": "string"},
        "files_allowlist": {"type": "array", "items": {"type": "string"}},
        "non_goals": {"type": "array", "items": {"type": "string"}, "default": []}
      }
    },
    "diff": {
      "type": "string",
      "description": "Git diff output"
    },
    "feedback": {
      "type": "object",
      "description": "Structured review feedback",
      "required": ["verdict", "issues"],
      "properties": {
        "verdict": {
          "type": "string",
          "enum": ["approve", "request_changes"]
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["severity", "category", "message"],
            "properties": {
              "severity": {"type": "string", "enum": ["blocking", "warning", "suggestion"]},
              "category": {"type": "string", "enum": ["security", "correctness", "scope", "style", "performance"]},
              "message": {"type": "string"},
              "file_path": {"type": "string"},
              "line": {"type": "integer"}
            }
          },
          "default": []
        },
        "summary": {"type": "string"}
      }
    }
  }
}
